@page "/details/{id}"
@inherits StockDetailsBase

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-left">


    <div class="row">
        <div class="col-md-6">
            <h2 class="display-4">@stock.Company</h2> <h5 class="text-left">Ticker: @stock.Ticker</h5>
        </div>
        <div class="col-md-3 mt-4">
            <h5>Sector: @stock.Sector</h5>
        </div>
        <div class="col-md-3 mt-4">
            <h5>Market Cap: @stock.MagicFormulaMarketCap M</h5>
        </div>
    </div>
    <hr />

</div>
<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-4">
            <h2 class="text-center">Fundamental</h2>
            <table class="table table-dark">
                <tbody>
                    @if (stock.PriceToEarning < 15)
                    {
                        <tr class="color-green">
                            <td>P/E</td>
                            <td>@stock.PriceToEarning</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>P/E</td>
                            <td>@stock.PriceToEarning</td>
                        </tr>
                    }
                    <tr>
                        <td>P/B</td>
                        <td>@stock.PriceToBook</td>
                    </tr>
                    @if (stock.EarningsYield > 8)
                    {
                        <tr class="color-green">
                            <td>Earnings Yield</td>
                            <td>@stock.EarningsYield</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>Earnings Yield</td>
                            <td>@stock.EarningsYield</td>
                        </tr>
                    }

                    @if (stock.CashToDebt > 1)
                    {
                        <tr class="color-green">
                            <td>Cash To Debt</td>
                            <td>@stock.CashToDebt</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>Cash To Debt</td>
                            <td>@stock.CashToDebt</td>
                        </tr>
                    }

                    @if (stock.InterestCoverage > 5)
                    {
                        <tr class="color-green">
                            <td>Interest Coverage</td>
                            <td>@stock.InterestCoverage</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>Interest Coverage</td>
                            <td>@stock.InterestCoverage</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <h2 class="text-center">Profit</h2>
            <table class="table table-dark">
                <tbody>
                    <tr>
                        <td>Gross Margin</td>
                        <td>@stock.GrossMargin</td>
                    </tr>
                    <tr>
                        <td>Net Margin</td>
                        <td>@stock.NetMargin</td>
                    </tr>

                    <tr>
                        <td>Piotroski Score</td>
                        <td>@stock.PiotroskiScore</td>
                    </tr>


                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <h2 class="text-center">Management</h2>
            <table class="table table-dark">
                <tbody>
                    <tr>
                        <td>Dividend Yield</td>
                        <td>@stock.DividendYield</td>
                    </tr>
                    <tr>
                        <td>Dividend Payout</td>
                        <td>@stock.PayoutRatio</td>
                    </tr>
                    <tr>
                        <td>ROE</td>
                        <td>@stock.ReturnOnEquity</td>
                    </tr>
                    <tr>
                        <td>ROIC</td>
                        <td>@stock.ReturnOnInvestedCapital</td>
                    </tr>
                    @if (stock.DebtInYears < 3)
                    {
                        <tr class="color-green">
                            <td>Debt in Years</td>
                            <td>@stock.DebtInYears</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>Debt in Years</td>
                            <td>@stock.DebtInYears</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

    <hr>

    <div class="row">
        <h3>Research</h3>
        <table class="table">
            <thead>
                <tr>
                    
                    <th scope="col">Website</th>
                    <th scope="col">Link</th>
                    
                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>Guru Focus</td>
                    <td><a href="@GuruFocusUrl">Click Here</a></td>

                </tr>
                <tr>

                    <td>Seeking Alpha</td>
                    <td><a href="@SeekingAlphaUrl">Click Here</a></td>

                </tr>
                <tr>

                    <td>Macro Trends</td>
                    <td><a href="@MacroTrendsUrl">Click Here</a></td>

                </tr>
                <tr>

                    <td>Quick FS</td>
                    <td><a href="@QuickFSUrl">Click Here</a></td>

                </tr>

            </tbody>
        </table>
    </div>

    <div class="row">
        <p class="small-font">@stock.CompanyDescription)</p>
    </div>
</div>
