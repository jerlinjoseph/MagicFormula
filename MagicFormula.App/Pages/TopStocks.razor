@page "/topstocks"
@inherits TopStockBase


<h3>Top Stocks</h3>
@if (stocks == null)
{
    <div class="loader"></div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Ticker</th>
                <th scope="col">Company</th>
                <th scope="col">Market Cap</th>
                <th scope="col">Earnings Yield</th>
                <th scope="col">ROC Greenblatt</th>
                <th scope="col">ROIC</th>
                <th scope="col">Interest Coverage</th>
                <th scope="col">P/E Ratio</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var stock in stocks)
            {
                <tr>
                    <td>@stock.Ticker</td>
                    <td>@stock.Company</td>
                    <td>@stock.MagicFormulaMarketCap</td>
                    <td>@stock.EarningsYield</td>
                    <td>@stock.ROC_Greenblatt</td>
                    <td>@stock.ReturnOnInvestedCapital</td>
                    <td>@stock.InterestCoverage</td>
                    <td>@stock.PriceToEarning</td>
                    <td><a href="/details" class="btn btn-info">Details</a></td>
                    
                </tr>

            }

        </tbody>
    </table>
}