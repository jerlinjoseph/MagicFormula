@page "/"
@inherits MagicStockListBase


<h3>MagicStockList</h3>
@if (stocks == null)
{
    <div class="loader"></div>
}
else
{
<table class="table table-striped small-font table-responsive-sm">
    <thead>
        <tr>
            <th scope="col">Ticker</th>
            <th scope="col">Company</th>
            <th scope="col">Market Cap</th>
            <th scope="col">Earnings Yield</th>
            <th scope="col">ROC Greenblatt</th>
            <th scope="col">ROIC</th>
            <th scope="col">Interest Coverage</th>
            <th scope="col">P/E Ratio</th>
            <th scope="col">Details</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody class="small-font">

        @foreach (var stock in stocks)
        {
        <tr>
            <td>@stock.Ticker</td>
            <td>@stock.Company</td>
            <td>@stock.MagicFormulaMarketCap</td>
            <td>@stock.EarningsYield</td>
            <td>@stock.ROC_Greenblatt</td>
            <td>@stock.ReturnOnInvestedCapital</td>
            <td>@stock.InterestCoverage</td>
            <td>@stock.PriceToEarning</td>
            <td><a href=@($"/details/{stock.Id}") class="btn btn-info small-font">Details</a></td>
            <td><button class="btn btn-success small-font">Update</button></td> <!--@onclick="(() => UpdateTicker(stock.Ticker))"-->
        </tr>

        }

    </tbody>
</table>
}